<?xml version="1.0" encoding="utf-8" ?> 
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet"> 
    <CodeSnippet Format="1.0.0"> 
        <Header> 
            <Title>Property With Change Event</Title> 
            <Shortcut>propn</Shortcut> 
            <Description>Code snippet for property that calls RaisePropertyChanged and XML description</Description> 
            <Author>PLaker</Author> 
            <SnippetTypes> 
                <SnippetType>Expansion</SnippetType> 
            </SnippetTypes> 
        </Header> 
        <Snippet> 
            <Declarations> 
                <Literal> 
                    <ID>type</ID> 
                    <ToolTip>Property type</ToolTip> 
                    <Default>string</Default> 
                </Literal> 
                <Literal> 
                    <ID>property</ID> 
                    <ToolTip>Property name</ToolTip> 
                    <Default>MyProperty</Default> 
                </Literal> 
                <Literal> 
                    <ID>field</ID> 
                    <ToolTip>Backing field name</ToolTip> 
                    <Default>myProperty</Default> 
                </Literal> 
            </Declarations> 
            <Code Language="csharp"><![CDATA[$type$ $field$; 
            public $type$ $property$ { 
                get 
		{ 
			return $field$; 
		} 
                set 
		{ 
			if ($field$ != value)
			{
				$field$ = value; 
				notify("$property$"); 
			}
		}
            } 
            $end$]]></Code> 
        </Snippet> 
    </CodeSnippet> 
</CodeSnippets> 
